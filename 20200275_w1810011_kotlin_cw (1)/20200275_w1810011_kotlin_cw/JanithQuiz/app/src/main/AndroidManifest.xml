<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomeququiz">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JanithQuiz"
        android:fullBackupContent="true"
        android:allowBackup="true">
        <activity
            android:name="com.randomeququiz.PointsActivity"
            android:parentActivityName="com.randomeququiz.DashboardActivity"

            android:exported="false" />
        <activity
            android:name="com.randomeququiz.GamePlayActivity"
            android:parentActivityName="com.randomeququiz.DashboardActivity"

            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name="com.randomeququiz.DashboardActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>